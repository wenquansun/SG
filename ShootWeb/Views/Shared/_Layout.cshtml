            </div>
            <div class="inner">
                <h1 class="logo"><a href="index.html">AgroPlus - Agriculture company</a></h1>
                <nav>
                    <ul class="sf-menu">
                        <li><a href="/home/index.html">首页</a></li>
                        <li><a href="/news/index.html">公司动态</a></li>
                        <li>
                            <a href="/services/index.html">服务项目</a>
                        </li>
                        <li><a href="/works/index.html">作品展示</a></li>
                        <li><a href="/about/index.html">关于我们</a></li>
                    </ul>
                </nav>
                <div class="clear"></div>
            </div>
            @RenderSection("slider", false)
        </header>
        <section id="content">
            @RenderBody()
        </section>
        <!-- Footer -->
